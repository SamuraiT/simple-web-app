%form{action: url('/user/take'), method: "post", id: "userform"}
  %fieldset
    %label{for: "name"} name
    %input{type: "text", name: "name", id: "name"}

    %label{for: "email"} email
    %input{type: "email", name: "email", id: "email"}

    %label{for: "name_and_email"} name+email
    %input{type: "text", name: "name_and_email", id: "name_and_email"}
  %button{type: "submit", id: "submit"} submit

%script{:crossorigin => "anonymous", :integrity => "sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=", :src => "https://code.jquery.com/jquery-3.5.1.min.js"}
  
:javascript
  $("form").on('change', function(e){
    console.log('hi')
    e.preventDefault();
    $.post("/user/take", {
        name: $("#name").val(),
        email: $("#email").val()
    }).done(function( data ) {
      $("#name_and_email").val(data['name_email'])
    });
  })
